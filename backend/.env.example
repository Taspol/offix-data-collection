DATABASE_URL=postgresql://user:password@localhost:5432/posture_data
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=user
DATABASE_PASSWORD=password
DATABASE_NAME=posture_data

# Storage Configuration (choose one: 'local', 'supabase', or 's3')
STORAGE_PROVIDER=local

# Local Storage (default - saves files in backend/uploads folder)
LOCAL_STORAGE_PATH=./uploads
SERVER_URL=http://localhost:3001

# Supabase Storage (optional)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-supabase-key
SUPABASE_BUCKET=posture-videos

# AWS S3 (optional)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
S3_BUCKET=posture-videos

# Server
PORT=3001
CORS_ORIGIN=http://localhost:3000

# Upload URL expiry (seconds)
UPLOAD_URL_EXPIRY=300
